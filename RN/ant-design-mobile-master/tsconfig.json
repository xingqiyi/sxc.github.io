{
  "compilerOptions": {
    "strictNullChecks": true,
    "moduleResolution": "node",
    "jsx": "preserve",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports":true,
    "target": "es6"
  },
  "exclude": [
    "node_modules",
    "lib",
    "es"
  ],
  "compileOnSave": false
}
